extends common/layout

block content
    h1.mb-5.text-center Login Page
    hr.mb-5
    .row.justify-content-center
        if loginError
            .col-md-8.mb-4
                .alert.alert-danger(role='alert')= loginError
                    button.close(type='button' data-dismiss='alert' aria-label='Close')
                        span(aria-hidden='true') &times;
        .col-md-8.mb-4
            form(method='POST' action='/auth/login')
                .form-group
                    label(for='inputId') ID
                    input#inputId.form-control(type='text' aria-describedby='ID' name='id')
                .form-group.mb-4
                    label(for='inputPassword') Password
                    input(type='password' name='password')#inputPassword.form-control
                button(type='submit').btn.btn-lg.btn-block.btn-outline-success Login
        .col-md-8
            .text-right
                a(href="/auth/signup").text-black-50 Create an Account